{
    "build": {
        "context": "",
        "Dockerfile": "Dockerfile"
    },
    "run": {
        "env": {
            "MY_ENV": "hello world"
        },
        "mountpoints": [
            {
                "mount_type": "file",
                "mountpoint": "/shnorky/inputs/inputs.txt",
                "read_only": true,
                "required": true
            },
            {
                "mount_type": "file",
                "mountpoint": "/shnorky/outputs/outputs.txt",
                "read_only": false,
                "required": true
            }
        ]
    }
}
